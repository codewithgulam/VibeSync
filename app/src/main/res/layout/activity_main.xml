<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Main Player UI -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:paddingBottom="60dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽµVibeSync"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/white" />

        <!-- Album Art -->
        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/default_art"
            android:scaleType="centerCrop"
            android:background="@drawable/album_art_bg"
            android:elevation="10dp" />

        <!-- Song Title -->
        <TextView
            android:id="@+id/tvSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Select a song"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_medium" />

        <!-- Progress Bar -->
        <SeekBar
            android:id="@+id/musicSeekBar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/purple_200"
            android:thumbTint="@color/purple_200"
            android:backgroundTint="@android:color/darker_gray" />

        <!-- Player Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPrev"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_glass_circle"
                android:src="@drawable/ic_prev"
                android:layout_marginHorizontal="15dp"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_glass_circle_primary"
                android:src="@drawable/ic_play"
                android:layout_marginHorizontal="15dp"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_glass_circle"
                android:src="@drawable/ic_next"
                android:layout_marginHorizontal="15dp"
                app:tint="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- BottomSheet for Music List -->
    <LinearLayout
        android:id="@+id/musicListPanel"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:background="@drawable/glass_bottom_sheet"
        android:padding="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="false">

        <!-- Include Grab Handle -->
        <include
            layout="@layout/bottom_sheet_handle" />

        <!-- Music List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/musicRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
